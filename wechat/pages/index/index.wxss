.container {
  width: 95%;
  margin: 0 auto;
}

.head {
  width: 100%;
  height: 100rpx;
  background-color: gray;
  display: flex;
  align-items: center;
}
.lingdang{
  flex: 8;
  margin-left: 10px;
}
.search{
  flex: 1;
}
.sandian{
flex: 1;
}

.found{
  color: aqua;
  font-size: 24px;
  font-weight: bold;
}
.title{
  font-size: 18px;
  font-weight: bold;
}
/* 轮播图，在轮播过程中，每个图片之间有间隙 */
.image_box{
  width: 100%;
  box-sizing: border-box;
  padding: 5px;
}

.top{
  display: flex;
  justify-content: center;
  margin:0 auto;
  font-weight: bold;
}
.top .border_{
  width: 80px;
  height: 10px;
  border-bottom: 3px solid;
}
.video_name{
  text-align: center;
  margin-bottom: 20px;
  font-weight: bold;
}


.swiperimg {
  height: 300px;
}
.image {
  width: 100%;
  height: 200px;
  border-radius: 10px;
}
.time{
  font-size: 10px;
  color: aqua;
}
.swipername{
  margin: 5px 0;
  font-size: 14px;
}
.mydian {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.dian {
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: rgb(189, 184, 184);
  margin-left: 10px;
  margin-bottom: 20px;
}

.highlighted {
  background-color: red;
}
.myscroll{
  display:flex
}
.calendar {
  width: 48%;
  height: 400rpx;
  margin-right: 20rpx;
}

.scroll_image {
  width: 150px;
  height: 100px;
  border-radius: 10px;
}

.scrollname {
  font-size: 14px;
  white-space: pre-line;
}