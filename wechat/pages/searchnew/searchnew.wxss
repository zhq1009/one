/* pages/searchnew/searchnew.wxss */
.container {
  width: 95%;
  margin: 0 auto;
  font-size: 12px;
  height: 1000px;
}
.coursesimage{
  width: 100%;
  height: 200px;
  margin-top: 20px;
}
.coursesname{
  font-size: 14px;
}

.coursesbody{
  color: gray;

  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 3;  /*最多显示3行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}